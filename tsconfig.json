{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "node_modules",
    "dist",
  ]
}
